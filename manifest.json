{
  "manifest_version": 3,
  "name": "InsightLens",
  "version": "1.1.0",
  "description": "A professional AI-powered chatbot that helps you understand any webpage with summaries and insights, featuring a specialized LinkedIn comment generator.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://cdnjs.cloudflare.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "settings/options.html",
  "action": {
    "default_title": "InsightLens",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content.js"
      ]
    },
    {
      "matches": [
        "*://*.linkedin.com/*"
      ],
      "css": [
        "linkedin feature/style.css"
      ],
      "js": [
        "linkedin feature/content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}